{% extends 'base.html.twig' %}
{% block title %}Modifier le cabane{% endblock %}

{% block body %}
    
<div style="background-image: url('/image/foto/4.jpg') ; " >

<div class="jumbotron" style="margin-top:0px; width:75%; margin:0 auto; background: rgba(11, 13, 24, 0.6);">

 <h1 class="display-6" style="color:#808000;">Modifier Votre cabane </h1>

 <!-- formulaire Pour modifier les informations de votre cabane  -->
        <div class="col-lg-10">

            {{ form_start(form) }}
			     <div class="form-group">
                    <label style="color:#808000;">Nom de l'hébergement :</label>
                    {{ form_widget(form.nom) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Destination :</label>
                    {{ form_widget(form.destination) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Type de l'hébergement :</label>
                    {{ form_widget(form.type) }}
                </div>
                
				<div class="form-group">
                    <label style="color:#808000;">Nombre de Places :</label>
                    {{ form_widget(form.nbrPlace) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Date de disponibilités :</label>
                    {{ form_widget(form.dateDisponible) }}
                </div>

                <div class="form-group">
                <label style="color:#808000;">Date de no disponibilités :</label>
                {{ form_widget(form.dateNondisponible) }}
                 </div>
                 <div class="form-group">
                    <label style="color:#808000;">Hauteur de cabane :</label>
                    {{ form_widget(form.hauteur) }}
                </div>

                <div class="form-group">
                 <label style="color:#808000;">Equipement:</label>
                {{ form_widget(form.equipment) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Activités :</label>
                    {{ form_widget(form.activite) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Prix par nuit :</label>
                    {{ form_widget(form.prix) }}
                </div>
                 <div style="color:#808000;"><p> <strong>les bébés ne sont pas pris en compte dans le nombre de voyageurs.</strong></p></div>

                

                <div class="form-group">
                    <label style="color:#808000;">Se Restaurer :</label>
                    {{ form_widget(form.seRestaurer) }}
                </div>

               
                <div class="form-group">
                <label style="color:#808000;">Images :</label>
                {{ form_widget(form.images) }}
                 </div>
          
              {% for image in cabane.images %}
              <div>
              <img src="{{ asset('/uploads/' ~image.name)}}" alt="" width="150">
              <a href="{{ path('cabane_delete_image' ,{'id': image.id}) }}" 
              data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
              </div>
               {% endfor %}

           
                <div class="form-group">
                    <label style="color:#808000;">Commentaire :</label>
                    {{ form_widget(form.commentaire) }}
                </div>

                <div class="modal-footer">
                    <a class="btn btn-secondary" href="{{ path('cabane_show') }}">Retour</a>
                    <button type="update" class="btn btn-success">Mettre à jour</button>
                </div>

            {{ form_end(form) }}
        </div>
		</div>

        <!-- /Formulaire de modification de cabane -->
{% endblock %}

