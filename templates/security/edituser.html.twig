{% extends 'base.html.twig' %}
{% block body %}
<div style="background-image: url('/image/foto/4.jpg') ; " >

<div class="jumbotron" style="margin-top:0px; width:75%; margin:0 auto; background: rgba(11, 13, 24, 0.6);">

 <h1 class="display-6" style="color:#808000;">Modifier votre compte</h1>

 <!-- formulaire de la création du cabane -->
        <div class="col-lg-10">

            {{ form_start(form) }}
			     <div class="form-group">
                    <label style="color:#808000;">Nom:</label>
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-group">
                    <label style="color:#808000;">Prénom :</label>
                    {{ form_widget(form.prenom) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Email :</label>
                    {{ form_widget(form.email) }}
                </div>
				<div class="form-group">
                    <label style="color:#808000;">Mot de passe  :</label>
                    {{ form_widget(form.password) }}
                </div>

                <div class="form-group">
                    <label style="color:#808000;">Confirmation Password : </label>
                    {{ form_widget(form.confirm_password) }}
                </div>
            
                <div class="modal-footer">
                    <button type="update" class="btn btn-success">Mise à jour</button>
                </div>
            {{ form_end(form) }}
        </div>
		</div>
{% endblock %}