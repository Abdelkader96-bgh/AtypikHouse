{% extends 'base.html.twig' %}

{% block title %}liste des Partners {% endblock %}

{% block body %}
<div class="jumbotron" style="margin: 0 auto; margin-top: 20px; width: 100%;">
      <h3>La liste des partenaires</h3>

   <!-- Liste des partenaires  -->
        
     {% if partners|length == 0 %}
          <div style="color: red; padding-left: 30px;">Pas de partenaires pour l'instant </div>
        {% else %}

    <table class="table table-hover" style="margin-top: 10px;">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom et PrÃ©non</th>
                <th scope="col">Email</th>
                <th scope="col">Telephone</th>
                <th scope="col">Nom_entreprise</th>
                <th scope="col">Statut</th>
                <th scope="col">CodePostal</th>
                <thscope="col">Ville</th>
                <th scope="col">Departement</th>
                <th scope="col">Regeion</th>
                <th scope="col">Typologie</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Partenaire</th>
                <th scope="col">Images</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.nom }} {{ partner.prenom }} </td>
                <td>{{ partner.email }}</td>
                <td>{{ partner.telephone }}</td>
                <td>{{ partner.nomEntreprise }}</td>
                <td>{{ partner.statut }}</td>
                <td>{{ partner.codePostal }}</td>
                <td>{{ partner.ville }}</td>
                <td>{{ partner.departement }}</td>
                <td>{{ partner.regeion }}</td>
                <td>{{ partner.commentaire }}</td>
                <td>{{ partner.partenaire |join('|')}}</td>
                <td>
                {% for image in partner.images %}
                 <a href="{{ asset('/partner/images/'~image.name) }}">
                <img  src="{{ asset('/partner/images/'~image.name) }}" style="width:50px;height=50px;"></a>
                 {% endfor %}
                </td>
                <td>
                    <a class="btn btn-info" href="#">Valider</a>
                </td>
                <td>
                {{ include('partner/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}

